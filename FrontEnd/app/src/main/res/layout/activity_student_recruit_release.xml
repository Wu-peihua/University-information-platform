<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--顶部toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_student_recruit_release"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_toolbar_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_toolbar_back"
                android:drawablePadding="@dimen/padding_xs"
                android:drawableStart="@drawable/ic_toolbar_back"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_xs"
                android:paddingStart="@dimen/padding_xs"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_s" />

        <TextView
            android:id="@+id/tv_toolBar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_l"
            android:text="发布组队信息"
            android:textStyle="bold"/>



<!--            <TextView-->
<!--                android:id="@+id/tv_toolBar_right"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="end"-->
<!--                android:layout_marginEnd="@dimen/margin_l"-->
<!--                android:layout_marginRight="@dimen/margin_l"-->
<!--                android:drawablePadding="@dimen/padding_s"-->
<!--                android:gravity="center"-->
<!--                android:maxLines="1"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="@dimen/fontSize_s"-->
<!--                android:text="发布" />-->
    </androidx.appcompat.widget.Toolbar>

    <!--发布信息表单-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_student_recruit_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--组队学校-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin">


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_recruit_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:hint="所在学校"
                    app:met_iconLeft="@drawable/ic_school"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:maxLines="1"/>

            </FrameLayout>

            <!--组队学科-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_recruit_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="所属学科"
                    android:layout_marginHorizontal="@dimen/margin"
                    app:met_iconLeft="@drawable/ic_subject"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:maxLines="1"/>

            </FrameLayout>

            <!--组队信息标题-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_recruit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="信息标题"
                    android:layout_marginHorizontal="@dimen/margin"
                    app:met_iconLeft="@drawable/ic_subject"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:maxLines="1"/>

            </FrameLayout>





            <!--组队要求描述-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin">

                <fj.edittextcount.lib.FJEditTextCount
                    android:id="@+id/et_recruit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_iconLeft="@drawable/ic_require"
                    app:etHint="组队要求描述..."
                    app:etLineColor="@color/colorAccent"
                    app:etMaxLength="300"
                    app:etMinHeight="200dp"
                    etPromptPosition="promptDn"
                    app:etPromptTextColor="@color/colorAccent"
                    app:etPromptTextSize="16sp"
                    app:etTextColor="@color/black"
                    app:etTextSize="16sp"
                    app:etType="singular"
                    />

            </FrameLayout>

            <!--选择图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginHorizontal="@dimen/margin_l"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_picture"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:text="选择图片："
                        android:layout_gravity="center"
                        android:textSize="@dimen/fontSize_s"
                        android:textColor="@color/darkBlue"/>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:layout_marginTop="@dimen/margin">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recruit_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:overScrollMode="never" />

                </FrameLayout>



            </LinearLayout>


            <!--提交按钮-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_recruit_submit"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textSize="@dimen/fontSize_l"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"/>

            </FrameLayout>

        </LinearLayout>




    </ScrollView>



</LinearLayout>