<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <!--发布信息表单-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/admin_course_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">


            <!--组队学校-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin">


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_course_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_s"
                    android:hint="学校"
                    app:met_iconLeft="@drawable/ic_school"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:textSize="@dimen/fontSize_s"
                    android:maxLines="1"/>

            </FrameLayout>

            <!--组队学科-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_course_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="学院"
                    android:textSize="@dimen/fontSize_s"
                    android:layout_marginHorizontal="@dimen/margin_s"
                    app:met_iconLeft="@drawable/ic_subject"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:maxLines="1"/>

            </FrameLayout>

            <!--组队信息标题-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_course_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize_s"
                    android:hint="课程名"
                    android:layout_marginHorizontal="@dimen/margin_s"
                    app:met_iconLeft="@drawable/ic_title"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:maxLines="1"/>

            </FrameLayout>

            <!--组队联系电话-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/white">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_course_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSize_s"
                    android:hint="课程教师"
                    android:layout_marginHorizontal="@dimen/margin_s"
                    app:met_iconLeft="@drawable/recruit_ed"
                    app:met_baseColor="@color/darkBlue"
                    app:met_primaryColor="@color/darkBlue"
                    app:met_textColor="@color/black"
                    android:maxLines="1"/>

            </FrameLayout>



            <!--组队要求描述-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin">

                <fj.edittextcount.lib.FJEditTextCount
                    android:id="@+id/et_course_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_iconLeft="@drawable/ic_require"
                    app:etHint="课程简介..."
                    app:etLineColor="@color/colorAccent"
                    app:etMaxLength="300"
                    app:etMinHeight="200dp"
                    etPromptPosition="promptDn"
                    app:etPromptTextColor="@color/colorAccent"
                    app:etPromptTextSize="16sp"
                    app:etTextColor="@color/black"
                    app:etTextSize="@dimen/fontSize_s"
                    app:etType="singular"
                    />

            </FrameLayout>

            <!--选择图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginHorizontal="@dimen/margin_l"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_photo"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:text="选择图片："
                        android:layout_gravity="center"
                        android:textSize="@dimen/fontSize_s"
                        android:textColor="@color/blue"/>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:layout_marginTop="@dimen/margin">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_course_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:overScrollMode="never" />

                </FrameLayout>



            </LinearLayout>


            <!--提交按钮-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_course_submit"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textSize="@dimen/fontSize_s"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_selector"/>

            </FrameLayout>

        </LinearLayout>




    </ScrollView>



</LinearLayout>
