<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_cu_resItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="18dp"
        android:paddingRight="20dp">

        <com.lzy.widget.CircleImageView
            android:id="@+id/iv_cu_resItem_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/portrait_default"
            app:civ_BorderWidth="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cu_resItem_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="用户名"
                android:textColor="@color/blue"
                android:textSize="@dimen/fontSize_s"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_cu_resItem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="资源标题"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/fontSize_s" />

            <TextView
                android:id="@+id/tv_cu_resItem_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:maxLines="2"
                android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                android:textIsSelectable="true"
                android:textSize="@dimen/fontSize_s" />

            <TextView
                android:id="@+id/tv_cu_resItem_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:autoLink="web"
                android:text="www.baidu.com"
                android:textIsSelectable="true"
                android:textSize="@dimen/fontSize_s"
                android:textStyle="italic" />

            <!--            <com.lzy.ninegrid.NineGridView-->
            <!--                android:id="@+id/nineGrid_student_group_item_pic"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:paddingTop="@dimen/padding_s"-->
            <!--                android:paddingRight="@dimen/padding_s" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_cu_resItem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:text="2020-02-02 00:00"
                    android:textColor="@color/item_time"
                    android:textSize="@dimen/fontSize_xs" />

                <ImageView
                    android:id="@+id/iv_cu_resItem_report"
                    android:layout_width="@dimen/layoutWeight_s"
                    android:layout_height="@dimen/layoutHeight_s"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin_l"
                    android:background="@drawable/report" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray" />

</LinearLayout>